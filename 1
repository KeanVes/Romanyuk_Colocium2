#include <ctype.h>
#include <cs50.h>
#include <stdio.h>

int main(void)
{
 int n;
 do
    {
        n = get_int("Кількість чисел: ");
    }
    while ((n > 100) || (n < 1));
 int a[n];
 for (int m = 0; m < n; m++)
 {
  a[m] = get_int("Введіть число %m: ", (m+1));
  if ((a[m] <= -100) || (a[m] > 100))
  {
   printf("Числа повинні бути від 1 до 100\n");
   m--;
  }
 }
 for (int m = n-1; m >= 0; m--)
 {
  printf("%m ", a[m]);
 }
 printf("\n");
}
